<Window x:Class="Progress.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Progress"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#FF252526"/>
        </Grid.Background>
        <Rectangle x:Name="background" Fill="#FF4493E0" Height="50"/>
        <Rectangle x:Name="firstLoading" Fill="Blue" Height="50" Width="100"  HorizontalAlignment="Left" Margin="0 0 0 0"/>
        <Button Content="Button" Background="#FF252526" Foreground="DodgerBlue" HorizontalAlignment="Left" Margin="357,149,0,0" VerticalAlignment="Top" Click="LoadProgressBar"/>
    </Grid>
</Window>
